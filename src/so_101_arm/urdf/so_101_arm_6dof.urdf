<!-- SO-101 Robot Arm URDF - 6-DOF Configuration -->
<!-- Fixed version for proper Ignition Gazebo compatibility -->
<robot name="so_101_arm">
  
  <!-- ROS2 Control configuration -->
  <ros2_control name="IgnitionSystem" type="system">
      <hardware>
          <plugin>ign_ros2_control/IgnitionSystem</plugin>
      </hardware>
      
      <joint name="base_joint">
          <command_interface name="position">
              <param name="min">-1.92</param>
              <param name="max">1.92</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
      
      <joint name="shoulder_joint">
          <command_interface name="position">
              <param name="min">-1.75</param>
              <param name="max">1.75</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
      
      <joint name="elbow_joint">
          <command_interface name="position">
              <param name="min">-1.75</param>
              <param name="max">1.57</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
      
      <joint name="wrist_pitch_joint">
          <command_interface name="position">
              <param name="min">-1.66</param>
              <param name="max">1.66</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
      
      <joint name="wrist_roll_joint">
          <command_interface name="position">
              <param name="min">-2.79</param>
              <param name="max">2.79</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
      
      <joint name="gripper_joint">
          <command_interface name="position">
              <param name="min">-0.175</param>
              <param name="max">1.75</param>
          </command_interface>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
          <state_interface name="effort"/>
      </joint>
  </ros2_control>

  <!-- Gazebo plugins -->
  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
        <parameters>$(find so_101_arm)/config/controllers_6dof.yaml</parameters>
        <robot_param>robot_description</robot_param>
        <robot_param_node>robot_state_publisher</robot_param_node>
    </plugin>
  </gazebo>

  <!-- Base link -->
  <link name="base_link">
    <gazebo>
      <material>Gazebo/Grey</material>
    </gazebo>
  </link>

  <!-- Fixed joint from base_link to base -->
  <joint name="base_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Base link -->
  <link name="base">
    <inertial>
      <origin xyz="0.020739 0.00204287 0.065966" rpy="0 0 0"/>
      <mass value="0.147"/>
      <inertia ixx="0.000136117" ixy="4.59787e-07" ixz="9.75275e-08" 
               iyy="0.000114686" iyz="-4.97151e-06" izz="0.000130364"/>
    </inertial>
    
    <!-- Base motor holder visual -->
    <visual>
      <origin xyz="0.0206915 0.0221255 0.0300817" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="package://so_101_arm/models/so_101_arm/meshes/base_motor_holder_so101_v1.stl"/>
      </geometry>
      <material name="plastic">
        <color rgba="0.9 0.9 0.9 1.0"/>
