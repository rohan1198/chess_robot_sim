<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="chess_table_world">
    
    <!-- Physics settings optimized for robotic manipulation -->
    <physics name="default_physics" default="0" type="ode">
      <gravity>0 0 -9.8066</gravity>
      <ode>
        <solver>
          <type>quick</type>
          <iters>150</iters>
          <sor>1.4</sor>
        </solver>
        <constraints>
          <cfm>0.00001</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>1000</contact_max_correcting_vel>
          <contact_surface_layer>0.01</contact_surface_layer>
        </constraints>
      </ode>
      <max_step_size>0.004</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>250</real_time_update_rate>
    </physics>

    <!-- Scene settings -->
    <scene>
      <ambient>0.6 0.6 0.6</ambient>
      <background>0.8 0.8 0.9</background>
      <shadows>true</shadows>
    </scene>

    <!-- Sun light -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1.0 1.0 1.0 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Additional task lighting for precise work -->
    <light type="point" name="task_light_1">
      <pose>0.5 0.5 2.0 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>10</range>
        <constant>0.8</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
    </light>

    <light type="point" name="task_light_2">
      <pose>-0.5 -0.5 2.0 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>10</range>
        <constant>0.8</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
    </light>

    <!-- Ground plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1.0</mu>
                <mu2>1.0</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.6 0.6 0.6 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Chess/Work Table - optimized dimensions for robot arm and future chessboard -->
    <model name="chess_table">
      <static>true</static>
      <pose>0 0 0.4 0 0 0</pose>
      
      <!-- Table top -->
      <link name="table_top">
        <pose>0 0 0.375 0 0 0</pose>
        <collision name="top_collision">
          <geometry>
            <box>
              <size>1.0 1.0 0.05</size>  <!-- Square table perfect for chess -->
            </box>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0.8</mu>
                <mu2>0.8</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="top_visual">
          <geometry>
            <box>
              <size>1.0 1.0 0.05</size>
            </box>
          </geometry>
          <material>
            <ambient>0.4 0.3 0.2 1</ambient>
            <diffuse>0.6 0.4 0.25 1</diffuse>
            <specular>0.2 0.1 0.05 1</specular>
          </material>
        </visual>
      </link>

      <!-- Robot mounting bracket - attaches to table edge -->
      <link name="robot_mount">
        <pose>0.4 0 0.41 0 0 0</pose>  <!-- Positioned at table edge -->
        <collision name="mount_collision">
          <geometry>
            <box>
              <size>0.15 0.15 0.07</size>  <!-- Mounting platform -->
            </box>
          </geometry>
        </collision>
        <visual name="mount_visual">
          <geometry>
            <box>
              <size>0.15 0.15 0.07</size>
            </box>
          </geometry>
          <material>
            <ambient>0.2 0.2 0.2 1</ambient>
            <diffuse>0.3 0.3 0.3 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>

      <!-- Support bracket connecting mount to table -->
      <link name="support_bracket">
        <pose>0.42 0 0.39 0 0 0</pose>
        <collision name="bracket_collision">
          <geometry>
            <box>
              <size>0.11 0.08 0.03</size>
            </box>
          </geometry>
        </collision>
        <visual name="bracket_visual">
          <geometry>
            <box>
              <size>0.11 0.08 0.03</size>
            </box>
          </geometry>
          <material>
            <ambient>0.2 0.2 0.2 1</ambient>
            <diffuse>0.3 0.3 0.3 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
      </link>

      <!-- Table legs -->
      <link name="leg_1">
        <pose>0.4 0.4 0.175 0 0 0</pose>
        <collision name="leg1_collision">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
        </collision>
        <visual name="leg1_visual">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.2 0.1 1</ambient>
            <diffuse>0.5 0.3 0.15 1</diffuse>
          </material>
        </visual>
      </link>

      <link name="leg_2">
        <pose>-0.4 0.4 0.175 0 0 0</pose>
        <collision name="leg2_collision">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
        </collision>
        <visual name="leg2_visual">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.2 0.1 1</ambient>
            <diffuse>0.5 0.3 0.15 1</diffuse>
          </material>
        </visual>
      </link>

      <link name="leg_3">
        <pose>0.4 -0.4 0.175 0 0 0</pose>
        <collision name="leg3_collision">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
        </collision>
        <visual name="leg3_visual">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.2 0.1 1</ambient>
            <diffuse>0.5 0.3 0.15 1</diffuse>
          </material>
        </visual>
      </link>

      <link name="leg_4">
        <pose>-0.4 -0.4 0.175 0 0 0</pose>
        <collision name="leg4_collision">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
        </collision>
        <visual name="leg4_visual">
          <geometry>
            <box>
              <size>0.05 0.05 0.35</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.2 0.1 1</ambient>
            <diffuse>0.5 0.3 0.15 1</diffuse>
          </material>
        </visual>
      </link>

      <!-- Fixed joints to connect legs to table top -->
      <joint name="leg1_joint" type="fixed">
        <parent>table_top</parent>
        <child>leg_1</child>
      </joint>
      <joint name="leg2_joint" type="fixed">
        <parent>table_top</parent>
        <child>leg_2</child>
      </joint>
      <joint name="leg3_joint" type="fixed">
        <parent>table_top</parent>
        <child>leg_3</child>
      </joint>
      <joint name="leg4_joint" type="fixed">
        <parent>table_top</parent>
        <child>leg_4</child>
      </joint>

      <!-- Mount the robot bracket to the table -->
      <joint name="mount_joint" type="fixed">
        <parent>table_top</parent>
        <child>robot_mount</child>
      </joint>
      <joint name="bracket_joint" type="fixed">
        <parent>table_top</parent>
        <child>support_bracket</child>
      </joint>
    </model>

    <!-- Static anchor for welding the robot base -->
    <model name="robot_weld_anchor">
      <static>true</static>
      <pose>0.4 0 0.77512 0 0 -1.5708</pose>  <!-- 90 degrees clockwise rotation -->
      
      <link name="weld_anchor_link">
        <pose>0 0 0 0 0 0</pose>
        <!-- Invisible anchor point -->
        <collision name="weld_collision">
          <geometry>
            <box>
              <size>0.001 0.001 0.001</size>
            </box>
          </geometry>
        </collision>
        <!-- Optional: tiny visual marker for debugging -->
        <visual name="weld_visual">
          <geometry>
            <sphere>
              <radius>0.005</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>  <!-- Red marker -->
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Chess board reference area (visual guide for development) -->
    <model name="chessboard_reference">
      <static>true</static>
      <pose>-0.2 0 0.8005 0 0 0</pose>  <!-- Slightly above table surface -->
      
      <link name="board_outline">
        <visual name="board_visual">
          <geometry>
            <box>
              <size>0.4 0.4 0.001</size>  <!-- Standard chessboard size -->
            </box>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 0.3</ambient>  <!-- Semi-transparent -->
            <diffuse>0.9 0.9 0.9 0.3</diffuse>
            <specular>0.1 0.1 0.1 0.3</specular>
          </material>
        </visual>
        <!-- No collision - just visual reference -->
      </link>
    </model>

    <!-- Reference coordinate frame markers (helpful for development) -->
    <model name="coordinate_markers">
      <static>true</static>
      <pose>0.6 0.6 0.8 0 0 0</pose>
      
      <!-- X-axis marker (red) -->
      <link name="x_axis">
        <visual name="x_visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.1</length>
            </cylinder>
          </geometry>
          <pose>0.05 0 0 0 1.5708 0</pose>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
      </link>
      
      <!-- Y-axis marker (green) -->
      <link name="y_axis">
        <visual name="y_visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.1</length>
            </cylinder>
          </geometry>
          <pose>0 0.05 0 -1.5708 0 0</pose>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
          </material>
        </visual>
      </link>
      
      <!-- Z-axis marker (blue) -->
      <link name="z_axis">
        <visual name="z_visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.1</length>
            </cylinder>
          </geometry>
          <pose>0 0 0.05 0 0 0</pose>
          <material>
            <ambient>0 0 1 1</ambient>
            <diffuse>0 0 1 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

  </world>
</sdf>
